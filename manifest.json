{
    "manifest_version": 3,
    "name": "Cookie Exporter",
    "version": "1.0",
    "description": "Export cookies from the current site as JSON, Netscape, or Cookie Header.",
    "permissions": [
        "activeTab",
        "cookies"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}
